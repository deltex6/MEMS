@model MedicalEquipmentManagementSystem.Models.MedicalEquipment

@{
    ViewData["Title"] = "Dodaj nowy sprzêt";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Podstawowe informacje</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="np. Tomograf komputerowy" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="SerialNumber" class="form-label"></label>
                            <input asp-for="SerialNumber" class="form-control" placeholder="np. SN-2024-001" />
                            <span asp-validation-for="SerialNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Manufacturer" class="form-label"></label>
                            <input asp-for="Manufacturer" class="form-control" placeholder="np. Siemens" />
                            <span asp-validation-for="Manufacturer" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Model" class="form-label"></label>
                            <input asp-for="Model" class="form-control" placeholder="np. SOMATOM X.cite" />
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Category" class="form-label"></label>
                            <select asp-for="Category" class="form-select">
                                <option value="">-- Wybierz kategoriê --</option>
                                <option value="Diagnostyczny">Diagnostyczny</option>
                                <option value="Terapeutyczny">Terapeutyczny</option>
                                <option value="Laboratoryjny">Laboratoryjny</option>
                                <option value="Monitoruj¹cy">Monitoruj¹cy</option>
                                <option value="Chirurgiczny">Chirurgiczny</option>
                                <option value="Rehabilitacyjny">Rehabilitacyjny</option>
                                <option value="Inny">Inny</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Location" class="form-label"></label>
                            <input asp-for="Location" class="form-control" placeholder="np. Budynek A, Piêtro 2, Sala 201" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Status i daty</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<MedicalEquipmentManagementSystem.Models.EquipmentStatus>()">
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="PurchaseDate" class="form-label"></label>
                            <input asp-for="PurchaseDate" type="date" class="form-control" />
                            <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="LastMaintenanceDate" class="form-label"></label>
                            <input asp-for="LastMaintenanceDate" type="date" class="form-control" />
                            <span asp-validation-for="LastMaintenanceDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="NextMaintenanceDate" class="form-label"></label>
                            <input asp-for="NextMaintenanceDate" type="date" class="form-control" />
                            <span asp-validation-for="NextMaintenanceDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Dodatkowe informacje</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label"></label>
                        <textarea asp-for="Notes" class="form-control" rows="4" placeholder="Dodatkowe uwagi dotycz¹ce sprzêtu..."></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-lg"></i> Zapisz
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-lg"></i> Anuluj
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
